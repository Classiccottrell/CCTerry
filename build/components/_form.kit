<tagga-form model="contact" post-submit-url="thank-you.html">
  <tagga-input name="first-name" required></tagga-input>
  <tagga-input name="last-name" required></tagga-input>
  <tagga-input name="email" type="email" required></tagga-input>
  <tagga-sms-opt-in name="mobileOptIn" shortcode="82442" keyword="GORDMANS"></tagga-sms-opt-in>
  <tagga-email-opt-in name="emailOptIn" for="email" list-id="1bf1f3826e5439ab64fe0b7a443619a3" firstname-field="first-name" lastname-field="last-name" api-key="faea"></tagga-email-opt-in>
  <div class="large-12 columns">
 		<tg-input type="checkbox" name="age_agree" label="<span id='terms-checkbox'>I am at least 18 years of age and agree to the full</span> <a href='terms-and-conditions.html' id='terms-link' target='_blank'>Terms and Conditions</a>" required></tg-input>
 	</div>
  <div class="large-12 columns">
      <button type="submit">Submit</button>
  </div>
</tagga-form>